<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_anh_dich_vu_phong"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"

        android:layout_centerVertical="true"
        android:background="@color/light_blue" />

    <TextView
        android:id="@+id/tv_ten_dich_vu_phong"
        style="@style/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_anh_dich_vu_phong"
        android:text="Giường đơn" />

    <ImageView
        android:id="@+id/iv_decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/edt_so_luong_dvp"
        android:src="@drawable/decrease" />

    <EditText
        android:id="@+id/edt_so_luong_dvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@id/iv_increase"
        android:inputType="number"
        android:text="0" />

    <ImageView
        android:id="@+id/iv_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:src="@drawable/increase" />

</RelativeLayout>