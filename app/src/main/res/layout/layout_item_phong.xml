<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rv_item"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginVertical="5dp"
    >
<RelativeLayout
    android:layout_width="100dp"
    android:layout_height="100dp">
    <ProgressBar
        android:id="@+id/progressBar_itemphong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:progressDrawable="@drawable/refresh"
        android:visibility="visible"/>
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_item_phong"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:src="@drawable/phong_1" />
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_name_room"
            style="@style/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                style="@style/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá"
                android:textColor="@color/gray"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/tv_sale"
                style="@style/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="Giá sale"
                android:textColor="@color/red"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_type_room"
            style="@style/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại phòng"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_status_room"
            style="@style/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái phòng"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>